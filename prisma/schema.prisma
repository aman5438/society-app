generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  admin
  owner
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  role      Role
  createdAt DateTime @default(now())
  owners    Owner[]

  @@map("users")
}

model Flat {
  id         Int       @id @default(autoincrement())
  flatNumber String    @unique
  type       String
  createdAt  DateTime  @default(now())
  owners     Owner[]
  tenants    Tenant[]

  @@map("flats")
}

model Owner {
  id        Int      @id @default(autoincrement())
  userId    Int
  flatId    Int
  name      String
  contact   String?
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
  flat Flat @relation(fields: [flatId], references: [id])

  @@map("owners")
}

model Tenant {
  id             Int      @id @default(autoincrement())
  flatId         Int
  name           String
  contact        String?
  leaseStartDate DateTime?
  leaseEndDate   DateTime?
  createdAt      DateTime @default(now())

  flat Flat @relation(fields: [flatId], references: [id])

  @@map("tenants")
}